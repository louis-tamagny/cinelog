{% block body %}
<div class="flex flex-row items-center justify-center p-6">    
    <img src="https://image.tmdb.org/t/p/w300{{ movie.poster_path }}" alt="{{ movie.title }}">
    <div class="flex flex-col h-[450px] p-4 align-top">
        <h1 class="text-white  text-4xl font-bold">{{ movie.title }} ({{ movie.release_date|date("Y") }})</h1>
        <div class="flex flex-row gap-2 my-2 mx-2">
            <p class="text-white text-sm">{{ movie.release_date|date("d/m/Y") }} ({{movie.origin_country[0]}})</p>
            <span class="text-white text-sm">.</span>
            <ul class="text-white flex flex-row gap-2">
                {% for genre in movie.genres %}
                    <li class="text-sm">{{ genre.name }}</li>
                {% endfor %}
            </ul>
            <span class="text-white font-bold text-sm">.</span>
            <p class="text-white text-sm">{{ (movie.runtime // 60) ~ 'h ' ~ (movie.runtime % 60) ~ 'm' }}</p>
        </div>
        <h2 class="relative text-white text-xl font-bold ml-4 mt-2 mb-1 before:absolute before:content before:w-1 before:h-full before:border-2 before:border-yellow-500 before:left-[-15px] before:bottom-[-2px] before:bg-yellow-500 before:rounded-full">Synopsis</h2>
        <p class="text-white ml-4 my-2">{{ movie.overview ?: 'Aucune description disponible.' }}</p> 
    </div>
</div>
<iframe width="420" height="315"
src="https://www.youtube.com/embed/{{trailerKey}}">
</iframe> 
<p class="text-white">{{dump(trailerKey) }}</p>


    {{ include('comment/new.html.twig')}}
{% endblock %}
