{% extends 'base.html.twig' %}

{% block title %}Cinélog - {{ movie.title }}{% endblock %}

{% block body %}
  <div class="flex flex-row items-center justify-center p-6">
      <img src="https://image.tmdb.org/t/p/w300{{ movie.poster_path }}" alt="{{ movie.title }}">
      <div class="flex flex-col h-[450px] p-4 align-top">
          <h1 class="text-white  text-4xl font-bold">{{ movie.title }} ({{ movie.release_date|date("Y") }})</h1>
          <div class="flex flex-row gap-2 my-2 mx-2">
              <p class="text-white text-sm">{{ movie.release_date|date("d/m/Y") }} ({{movie.origin_country[0]}})</p>
              <span class="text-white text-sm">.</span>
              <ul class="text-white flex flex-row gap-2">
                  {% for genre in movie.genres %}
                      <li class="text-sm">{{ genre.name }}</li>
                  {% endfor %}
              </ul>
              <span class="text-white font-bold text-sm">.</span>
              <p class="text-white text-sm">{{ (movie.runtime // 60) ~ 'h ' ~ (movie.runtime % 60) ~ 'm' }}</p>
          </div>
          <h2 class="relative text-white text-xl font-bold ml-4 mt-2 mb-1 before:absolute before:content before:w-1 before:h-full before:border-2 before:border-yellow-500 before:left-[-15px] before:bottom-[-2px] before:bg-yellow-500 before:rounded-full">Synopsis</h2>
          <p class="text-white ml-4 my-2">{{ movie.overview ?: 'Aucune description disponible.' }}</p>
      </div>
  </div>
  {% if trailerKey != NULL %}
    <div >
        <h2 class=" relative text-white text-xl font-bold ml-4 mt-2 mb-8 before:absolute before:content before:w-1 before:h-full before:border-2 before:border-yellow-500 before:left-[-15px] before:bottom-[-2px] before:bg-yellow-500 before:rounded-full">Bande-Annonce</h2>
        <iframe width="100%" height="800" src="https://www.youtube.com/embed/{{trailerKey}}"></iframe>
    </div>
  {% endif %}

  {% if app.user %}
    {{ include('comment/form.html.twig') }}
  {% endif %}

  {% if comments %}
    <h2 class="relative text-white text-xl font-bold ml-4 mt-12 mb-4 before:absolute before:content before:w-1 before:h-full before:border-2 before:border-yellow-500 before:left-[-15px] before:bottom-[-2px] before:bg-yellow-500 before:rounded-full">Commentaire(s)</h2>
      <div class="flex flex-col gap-4 items-center justify-center p-6">
          {% for comment in comments %}

          <div class="flex flex-col items-center w-full bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row  dark:border-gray-700 dark:bg-gray-800">

              <!-- Détails du commentaire -->
              <div class="flex flex-col justify-between p-4">
                  <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ comment.commentUser.username }}</h2>
                  <p class="text-gray-600 text-sm mt-1 items-center flex">
                          {% for i in 1..5 %}
                              {% if i <= comment.note %}
                                  <!-- Étoile jaune pleine -->
                                  <svg class="w-5 h-5 text-yellow-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.95a1 1 0 00.95.69h4.163c.969 0 1.371 1.24.588 1.81l-3.37 2.447a1 1 0 00-.364 1.118l1.287 3.95c.3.921-.755 1.688-1.54 1.118l-3.37-2.447a1 1 0 00-1.176 0l-3.37 2.447c-.784.57-1.838-.197-1.54-1.118l1.287-3.95a1 1 0 00-.364-1.118L2.172 9.377c-.784-.57-.38-1.81.588-1.81h4.163a1 1 0 00.95-.69l1.286-3.95z"/>
                                  </svg>
                              {% else %}
                                  <!-- Étoile grise vide -->
                                  <svg class="w-5 h-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.286 3.95a1 1 0 00.95.69h4.163c.969 0 1.371 1.24.588 1.81l-3.37 2.447a1 1 0 00-.364 1.118l1.287 3.95c.3.921-.755 1.688-1.54 1.118l-3.37-2.447a1 1 0 00-1.176 0l-3.37 2.447c-.784.57-1.838-.197-1.54-1.118l1.287-3.95a1 1 0 00-.364-1.118L2.172 9.377c-.784-.57-.38-1.81.588-1.81h4.163a1 1 0 00.95-.69l1.286-3.95z"/>
                                  </svg>
                              {% endif %}
                          {% endfor %}
                  </p>

                  <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                      "{{ comment.message|length > 250 ? comment.message|slice(0, 250) ~ '...' : comment.message }}"
                  </p>
              </div>
          </div>
          {% endfor %}
      </div>
  {% endif %}
{% endblock %}
